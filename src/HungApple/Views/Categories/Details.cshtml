			<!-- product tab content -->
			<div class="tab-content">
				<!-- tab1  -->
				<div id="tab1" class="tab-pane fade in active">
					<div class="row">
						<div class="col-md-12">
							<p>@Model.Description</p>
						</div>
					</div>
				</div>
				<!-- /tab1  -->
				<!-- tab2  -->
