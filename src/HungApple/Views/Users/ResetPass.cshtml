@model HungApple.Models.ResertPassword
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="ResetPass" asp-controller="Users">
    @if(!string.IsNullOrEmpty(ViewBag.Error)){
        <label class="text-danger">@ViewBag.Error</label>
    }
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label>Mật khẩu mới</label>
        <input type="password" class="form-control" asp-for="@Model.PasswordNew" required>
    </div>
    <div class="form-group">
        <label for="password">Xác nhận mật khẩu</label>
        <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" required>
    </div>
    <button type="submit" class="btn btn-primary">Đặt lại</button>
</form>

