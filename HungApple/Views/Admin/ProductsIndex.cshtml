@model IEnumerable<HungApple.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminPanel";
    int maxLength = 30;
}

<h1><strong>QUẢN LÝ SẢN PHẨM</strong></h1>

<p>
    <a asp-action="ProductsCreate" class="w3-button w3-blue w3-round" style="text-decoration:none;">Thêm sản phẩm</a>
</p>
<div class="w3-card w3-round w3-white">
    <table class="table">
        <thead class="table-success">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Detail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceDiscount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsNew)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsBestSeller)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsSale)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody class="w3-border w3-padding">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @{
                            string description = item.Description;
                            string limitedDescription = string.Join(" ", description.Split(' ').Take(maxLength));
                            if (description.Split(' ').Length > maxLength)
                            {
                                limitedDescription += " ...";
                            }
                            @Html.Raw(limitedDescription)
                        }
                    </td>
                    <td>
                        @{
                            string detail = item.Detail;
                            string limitedDetail = string.Join(" ", detail.Split(' ').Take(maxLength));
                            if (detail.Split(' ').Length > maxLength)
                            {
                                limitedDetail += " ...";
                            }
                            @Html.Raw(limitedDetail)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceDiscount)
                    </td>
                    <td>
                        <img src="/Upload/Product/@item.Image" alt="Ảnh sản phẩm" width="60" height="60" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsNew)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsBestSeller)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.IsSale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Hành động
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-action="ProductsEdit" asp-route-id="@item.Id" style="text-decoration:none;">Chỉnh sửa</a>
                                </li>
                                <li>
                                    <a asp-action="ProductsDetails" asp-route-id="@item.Id" style="text-decoration:none;">Chi tiết</a>
                                </li>
                                <li>
                                    <a asp-action="ProductsDelete" asp-route-id="@item.Id" style="text-decoration:none;">Xóa</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
            <ul class="pagination mb-sm-0">
                <!-- Nút Previous -->
                <li class="page-item" style="display:@(ViewBag.pageNumber == 1 ? "none" : "inline");">
                    <a asp-action="ProductsIndex"
                       asp-route-pageNumber="@(ViewBag.pageNumber - 1)"
                       class="page-link btn-outline-info">
                        Trước
                    </a>
                </li>

                <!-- Các số trang -->
                @for (var i = 1; i <= ViewBag.page; i++)
                {
                    <li class="page-item @(ViewBag.pageNumber == i ? "active" : "")">
                        <a asp-action="ProductsIndex" asp-route-pageNumber="@i" class="page-link" style="border-radius: 30px !important; margin-left: 4px; margin-right: 4px;">@i</a>
                    </li>
                }

                <!-- Nút Next -->
                <li class="page-item" style="display:@(ViewBag.pageNumber == ViewBag.page ? "none" : "inline");">
                    <a asp-action="ProductsIndex"
                       asp-route-pageNumber="@(ViewBag.pageNumber + 1)"
                       class="page-link btn-outline-info">
                        Sau
                    </a>
                </li>
            </ul>
        </tbody>
    </table>
</div>

